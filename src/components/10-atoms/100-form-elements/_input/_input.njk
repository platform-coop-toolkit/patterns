<div class="input-group">
	<label for="{{ name }}">{{ label }}{% if error %} (Error){% elseif disabled %} (Disabled){% endif %}</label>
	<input {% if error %}class="input--error" {% endif %}id="{{ name }}" name="{{ name }}" placeholder="{{ placeholder if placeholder else '' }}" type="{{ type }}" value="{{ errorValue if error or value }}"{{ ' disabled' if disabled }}{{ ' required' if required }} />
	{% if error %}<p class="input-group__error">{% render '@svg', {svg: 'error'}, true %}{{ errorMessage | safe }}</p>{% endif %}
	{% if description %}
	<p class="input-group__description">{{ description }}</p>
	{% endif %}
</div>
