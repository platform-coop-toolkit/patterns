<h1>{{ cardsTitle }}</h1>
<div class="cards">
	{% for key, card in cards %}
	<div class="card card--{{ key }} ">
		<header>
			<span class="card__format">{{ card.format }}</span>
			{% if card.link %}
			<h2 id="{{ key }}-{{ card.id }}" class="card__title"><a href="{{ card.link }}">{{ card.title | safe }}</a></h2>
			{% elseif card.externalLink %}
			<a aria-labelledby="{{ key }}-{{ card.id }}" class="card__external-link" rel="external" href="{{ card.externalLink }}"><svg class="icon icon--arrow-ne"><use xlink:href="/images/arrow-ne.svg"/></svg></a>
			<h2 id="{{ key }}-{{ card.id }}" class="card__title">{{ card.title | safe }}</h2>
			{% endif %}
		</header>
		{% if card.date %}
		<p class="card__date">
			{% if key === 'event' %}
			<svg class="icon icon--calendar"><use xlink:href="/images/calendar.svg"/></svg>{{ card.date }}
			{% else %}
			{{ card.date }}
			{% endif %}
		</p>
		{% endif %}
		{% if card.byline %}
			<p class="card__byline">
				{% if card.bylineLink %}
				By <a href="https://example.com/" rel="external">{{ card.byline }}</a>
				{% else %}
				By {{ card.byline }}
				{% endif %}
			</p>
		{% endif %}
		{% if card.locality %}
		<p class="card__locality"><svg class="icon icon--location"><use xlink:href="/images/location.svg"/></svg> {{ card.locality }}</p>
		{% endif %}
		<ul class="card__tags tags">
			{% for tag in card.topics %}
				<li class="tag">
					<a class="tag__link" href="{{ tag }}"><span class="screen-reader-text">Topic: </span>{{ tag }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
	{% endfor %}
</div>
