<nav aria-labelledby="menu-primary-label">
	<button class="menu-toggle" aria-expanded="false">
		{% render '@svg', {svg:'menu', class:'open'} %}
		{% render '@svg', {svg:'close'} %}
		<span id="menu-primary-label" class="menu-toggle__label">{{ menuTitle }}</span>
	</button>
	<ul class="menu{% if modifier %} menu--{{ modifier }}{% endif %}">
		{% for id, menuItem in menuItems %}
		<li{% if menuItem.submenuItems %} class="menu__submenu-wrapper{% if menuItem.current %} current_page_ancestor current-menu-ancestor{% endif %}"{% endif %}>
			<a class="menu__item" {% if menuItem.current %}aria-current="page" {% endif %}href="#{{ id }}">{{ menuItem.label }}</a>
			{% if menuItem.submenuItems %}
			<ul class="menu__submenu">
				{% for id, submenuItem in menuItem.submenuItems %}
				<li><a {% if submenuItem.current %}aria-current="page"{% endif %}class="menu__item" href="#{{ id }}">{{ submenuItem.label }}</a></li>
				{% endfor %}
			</ul>
			{% endif %}
		</li>
		{% endfor %}
	</ul>
</nav>
