{% if not standAlone %}<div class="spacer"></div>{% endif %}
<div class="accordions">
	{% for accordion in accordions %}
	<div class="accordion{% if accordion.checkbox %} accordion--checkbox{% endif %}">
		{% if accordion.checkbox %}
		{% render '@checkbox', {className: 'accordion__heading', standAlone: true}, true %}
		{% render '@checkboxes', {className: 'accordion__content'}, true %}
		{% else %}
		<p class="accordion__heading">{{ accordion.accordionLabel }}</p>
		<div class="accordion__content">
			<p>{{ accordion.accordionContent }}</p>
		</div>
		{% endif %}
	</div>
	{% endfor %}
</div>
