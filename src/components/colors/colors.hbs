	</div>
	<div>
		{{#each colors.greens}}
		<div class="color has-{{ this }}-background"></div>
		{{/each}}
	</div>
	<div>
		{{#each colors.reds}}
		<div class="color has-{{ this }}-background"></div>
		{{/each}}
	</div>
	<div>
		{{#each colors.yellows}}
		<div class="color has-{{ this }}-background"></div>
		{{/each}}
	</div>
	<div>
		{{#each colors.shades}}
		<div class="color has-{{ this }}-background"></div>
		{{/each}}
	</div>
</div>
