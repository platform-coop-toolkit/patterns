<div class="page-header">
	{% render '@breadcrumb-link', {label: 'Home', href: '/home'} %}
	<h1>{{ title }}</h1>
</div>
<div class="filter-sort">
	{% render '@button', {title: false}, true %}
	<div class="filter-sort__filters">
		{% render '@accordion', {title: false, accordions: accordions}, true %}
	</div>
	<div class="filter-sort__sorts">
	</div>
</div>
<ul class="cards">
{% for card in cards %}
  {% render '@card--resource', card %}
{% endfor %}
</ul>
{% render '@pagination', {title: false}, true %}
